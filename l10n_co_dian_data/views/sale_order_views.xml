<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- sale.order inherit form view -->
        <record id="view_order_form_contracts" model="ir.ui.view">
            <field name="name">sale.order.inherit.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_information']/group/group[@name='sale_info']/field[@name='invoice_status']" position="after">
                    <field name="number_contract" attrs="{'readonly': [('state','not in',('draft','sent'))]}"/>
                    <field name="date_contract" attrs="{'readonly': [('state','not in',('draft','sent'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>